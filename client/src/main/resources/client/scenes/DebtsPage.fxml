                    <items>
                      <MenuItem fx:id="rto" mnemonicParsing="false" text="Return to overview" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
            <TabPane fx:id="tabPane" prefHeight="1600.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab fx:id="currentDebtsTab" text="Current Debts">
                     <content>
                        <BorderPane prefHeight="554.0" prefWidth="600.0">
                           <top>
                              <Label fx:id="currentDebtsLabel" text="Current Debts" textFill="#fefdfd" BorderPane.alignment="CENTER">
                                 <font>
                                    <Font name="Arial Bold" size="24.0" />
                                 </font>
                                 <BorderPane.margin>
                                    <Insets top="20.0" />
                                 </BorderPane.margin>
                              </Label>
