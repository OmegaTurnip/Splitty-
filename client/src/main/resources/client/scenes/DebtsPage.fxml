<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AdminCtrl">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #8E3EDD;" VBox.vgrow="ALWAYS">
