                        <BorderPane prefHeight="554.0" prefWidth="600.0">
                           <top>
                              <Label fx:id="settledDebtsLabel" text="Settled Debts" textFill="#fefdfd" BorderPane.alignment="CENTER">
                                 <font>
                                    <Font name="Arial Bold" size="24.0" />
                                 </font>
                                 <BorderPane.margin>
                                    <Insets top="30.0" />
                                 </BorderPane.margin>
                              </Label>
                           </top>
                           <center>
                              <TableView fx:id="settledDebtsTable" prefHeight="527.0" prefWidth="600.0" style="-fx-background-color: #E0DDF2; -fx-background-radius: 5pt; -fx-alignment: center;" BorderPane.alignment="CENTER">
