                                    <TableColumn fx:id="currentDebtTo" minWidth="0.0" prefWidth="170.4000244140625" text="To" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
