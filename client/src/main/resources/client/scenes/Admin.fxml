<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #8E3EDD;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AdminCtrl">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <MenuBar maxWidth="1.7976931348623157E308" style="-fx-background-color: #fefdfd;">
              <menus>
                <Menu fx:id="languages" mnemonicParsing="false" text="Languages" />
                  <Menu mnemonicParsing="false" text="Return to overview">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Return to overview" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
            <Label fx:id="eventsLabel" text="Events" textFill="#fefdfd">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TableView fx:id="eventsTable" prefWidth="600.0" style="-fx-background-color: #E0DDF2; -fx-background-radius: 5pt; -fx-alignment: center;">
              <columns>
                <TableColumn fx:id="eventName" prefWidth="241.9999796152115" style="-fx-background-color: #fefdfd;" text="Title" />
                <TableColumn fx:id="creationDate" prefWidth="158.33335876464844" style="-fx-background-color: #fefdfd;" text="Creation Date" />
                  <TableColumn fx:id="lastActivity" prefWidth="158.33331298828125" style="-fx-background-color: #fefdfd;" text="Last Activity" />
              </columns>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TableView>
             <GridPane minHeight="50.0">
                 <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints />
                     <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                 </rowConstraints>
                 <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <buttons>
                         <Button fx:id="saveToJSON" mnemonicParsing="false" style="-fx-background-color: #0d0d0d; -fx-background-radius: 5pt;" text="Save to JSON" textFill="#fefdfd">
                             <font>
                                 <Font name="Arial" size="12.0" />
                             </font>
                         </Button>
                         <Button fx:id="deleteEvent" mnemonicParsing="false" style="-fx-background-color: #0d0d0d; -fx-background-radius: 5pt;" text="Delete Event" textFill="#fefdfd">
                             <font>
                                 <Font name="Arial" size="12.0" />
                             </font>
                         </Button>
                     </buttons>
                    <GridPane.margin>
                        <Insets bottom="20.0" right="20.0" top="20.0" />
                    </GridPane.margin>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                 </ButtonBar>
                 <Button fx:id="loadFromJSON" mnemonicParsing="false" style="-fx-background-color: #0d0d0d; -fx-background-radius: 5pt;" text="Load from JSON" textFill="#fefdfd" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="20.0" />
                    </GridPane.margin>
                 </Button>
             </GridPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
