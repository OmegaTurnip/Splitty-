<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="640.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.StartUpCtrl">
  <children>
      <BorderPane prefHeight="687.0" prefWidth="640.0">
         <top>
          <MenuBar prefHeight="0.0" prefWidth="758.0" styleClass="menu-bar" BorderPane.alignment="CENTER">
            <menus>
               <Menu fx:id="languageMenu" mnemonicParsing="false" text="Languages" />
                  <Menu fx:id="currencyMenu1" mnemonicParsing="false" text="Currency" />
               <Menu fx:id="adminLogin" mnemonicParsing="false" text="Admin">
                  <MenuItem fx:id="loginButton" mnemonicParsing="false" text="Login" />
               </Menu>
            </menus>
          </MenuBar>
         </top>
         <bottom>
            <ListView fx:id="yourEvents" pickOnBounds="false" prefHeight="531.0" prefWidth="640.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="15.0" left="50.0" right="50.0" top="15.0" />
               </padding>
               <styleClass>
                  <String fx:value="bottom-BG" />
                  <String fx:value="list-view" />
               </styleClass>
            </ListView>
         </bottom>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <AnchorPane prefHeight="262.0" prefWidth="598.0" styleClass="borderPane" BorderPane.alignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                     <TextField fx:id="newEvent1" layoutX="68.0" layoutY="48.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" prefWidth="306.0" promptText="Choose a name for a new event..." styleClass="text-field">

                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </TextField>
                     <Button fx:id="newEventButton1" layoutX="398.0" layoutY="46.0" mnemonicParsing="false" onAction="#createEvent" prefHeight="40.0" prefWidth="173.0" styleClass="blackButton">
                        <font>
                           <Font name="Arial" size="18.0" />
                        </font>
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                     </Button>
                     <TextField fx:id="joinEvent1" layoutX="68.0" layoutY="103.0" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" prefWidth="306.0" promptText="Enter an event invite code..." styleClass="text-field">
                        <cursor>
                           <Cursor fx:constant="TEXT" />
                        </cursor>
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </TextField>
                     <Button fx:id="joinEventButton1" layoutX="398.0" layoutY="103.0" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#joinEvent" prefHeight="40.0" prefWidth="173.0" styleClass="blackButton">

                     <font>
                        <Font name="Arial" size="18.0" />
                     </font>
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                     </Button>
                     <Label fx:id="yourEventsLabel" layoutX="68.0" layoutY="188.0" prefHeight="58.0" prefWidth="269.0" styleClass="title" text="Your Events">
                        <font>
                           <Font name="Arial" size="36.0" />
                        </font>
                     </Label>
                  </AnchorPane>
               </center>
            </BorderPane>
         </center>
      </BorderPane>
  </children>
</VBox>
