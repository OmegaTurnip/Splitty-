<VBox prefHeight="158.0" prefWidth="396.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.EditEventNameCtrl">
    <children>
        <MenuBar style="-fx-background-color: #fefdfd;" VBox.vgrow="NEVER">
            <menus>
                <Menu fx:id="languageMenu" mnemonicParsing="false" text="Languages" />
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="288.0" prefWidth="445.0" style="-fx-background-color: #8E3EDD;" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="eventName" layoutX="38.0" layoutY="52.0" prefHeight="40.0" prefWidth="306.0" style="-fx-background-color: #8E3EDD; -fx-background-radius: 5pt; -fx-border-width: 1.5pt; -fx-border-color: #E0DDF2; -fx-border-radius: 5pt; -fx-prompt-text-fill: #fefdfd;">
               <font>
                  <Font name="Arial" size="16.0" />
               </font></TextField>
            <Label fx:id="eventInput" alignment="CENTER" layoutX="-7.0" prefHeight="58.0" prefWidth="231.0" text="Name of event:" textFill="#fefdfd">
               <font>
                  <Font name="Arial" size="23.0" />
               </font>
            </Label>
            <Button fx:id="cancelButton" layoutX="198.0" layoutY="99.0" mnemonicParsing="false" onAction="#cancel" prefHeight="26.0" prefWidth="93.0" text="Cancel" />
            <Button fx:id="confirmButton" layoutX="298.0" layoutY="99.0" mnemonicParsing="false" onAction="#changeName" prefHeight="26.0" prefWidth="93.0" text="Confirm" />
            </children></AnchorPane>
    </children>
</VBox>
